{
  "version": 2,
  "name": "qr-checkin-system",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "SESSION_SECRET": "@session-secret",
    "DB_PATH": "./checkin.db",
    "ADMIN_EMAIL": "admin@example.com",
    "BCRYPT_ROUNDS": "10",
    "SESSION_MAX_AGE": "3600000"
  },
  "functions": {
    "app.js": {
      "maxLambdaSize": "50mb"
    }
  }
}